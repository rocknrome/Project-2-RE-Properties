<!DOCTYPE html>
<html lang="en">
    <%- include("../views/partials/head.ejs") %>
<body>
    <%- include("../views/partials/nav.ejs") %>

    <!--Function that exports into CSV-->
    <script src="/./utils/export.js"></script>

    <!--Function that exports into PDF-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>

    <div class="container">
        <h1>Property List</h1>
        <% properties.forEach(property => { %>
            <div class="row" style="margin-bottom: 10px; border: 1px solid #e1e1e1; padding: 10px;">
                <div class="column column-50">
                    <strong><a href="/properties/<%= property._id %>"><%= property.address %></a></strong>
                </div>
                <div class="column column-25">
                    <strong>Owner:</strong> <%= property.owner %>
                </div>
                <div class="column column-25">
                    <strong>Status:</strong> <%= property.completed ? 'Completed' : 'In Progress' %>
                </div>
            </div>
        <% }) %>
        <div style="text-align: right; margin-bottom: 10px;">
            <button id="exportButton" onclick="exportProperties()">Export to CSV</button>
            <button onclick="exportPropertiesToPDF()">Export to PDF</button>
        </div>
    </div>
</body>
</html>
