<!DOCTYPE html>
<html lang="en">
    <%- include("../views/partials/head.ejs") %>
<body>
    <%- include("../views/partials/nav.ejs") %>
    <div class="container">
        <h1>Edit Property</h1>
        <form action="/properties/<%= property._id %>?_method=PUT" method="POST">
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" value="<%= property.address %>" required><br>

            <label for="owner">Owner:</label>
            <input type="text" name="owner" id="owner" value="<%= property.owner %>" required><br>

            <label for="completed">Completed:</label>
            <input type="checkbox" name="completed" id="completed" <%= property.completed ? 'checked' : '' %>><br>

            <input type="submit" value="Update Property" class="button">
        </form>
    </div>
</body>
</html>
